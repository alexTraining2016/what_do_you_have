<resources>

    <style name="Material" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fastScrollTextColor">@color/colorAccentFood</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/bg_default_focused_holo_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="FoodAppThemeStatusBar" parent="Material">
        <item name="colorPrimary">@color/colorPrimaryFood</item>
        <item name="colorAccent">@color/colorAccentFood</item>
        <item name="colorPrimaryDark">@color/colorPrimaryFood</item>
    </style>

    <style name="FoodAppTheme" parent="FoodAppThemeStatusBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TrainingAppTheme" parent="Material">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimaryTraining</item>
        <item name="colorAccent">@color/colorAccentTraining</item>
        <item name="colorPrimaryDark">@color/colorPrimaryTraining</item>
    </style>
</resources>
