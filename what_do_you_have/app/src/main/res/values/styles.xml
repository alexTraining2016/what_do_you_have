<resources>

    <!-- Base application theme. -->
    <style name="FoodAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryFood</item>
        <item name="colorAccent">@color/colorAccentFood</item>
        <item name="android:fastScrollTextColor">@color/colorAccentFood</item>
        <item name="android:fastScrollPreviewBackgroundRight">
            @drawable/bg_default_focused_holo_light
        </item>
    </style>

    <style name="TrainingAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryTraining</item>
        <item name="colorAccent">@color/colorAccentTraining</item>
    </style>

    <style name="FoodAppThemeStatusBar" parent="FoodAppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="VectorImageTextViewStyleClickable">
        <item name="android:paddingBottom">16dip</item>
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
