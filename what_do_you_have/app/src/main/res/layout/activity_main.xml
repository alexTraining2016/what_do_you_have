<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comalexpolyanskyi.github.what_do_you_have.MainActivity">

    <ImageView
        android:id="@+id/avatar"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toThirdActivity"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_margin="6dip"
        android:textSize="24sp"
        android:layout_toRightOf="@id/avatar"
        android:layout_alignBottom="@id/avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cris Cross" />

    <TextView
        android:id="@+id/description"
        android:text="something description"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/goToSecondBtn"
        android:text="to second activity"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToSecondBtn"/>
</RelativeLayout>
